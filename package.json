	"private": true,
	"dependencies": {
		"@wordpress/env": "5.5.0",
		"@wordpress/scripts": "24.4.0",
		"@wordpress/stylelint-config": "21.3.0"
	},
	"scripts": {
		"create": "./bin/index.sh",
		"wp-env": "wp-env",
		"lint:php": "composer run lint",
